{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "incremental": true,
    "removeComments": false,
    "outDir": "./dist"
  },
  "lib": [
    "ES2020"
  ],
  "include": [
    "src",
    "config"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "dist"
  ]
}
